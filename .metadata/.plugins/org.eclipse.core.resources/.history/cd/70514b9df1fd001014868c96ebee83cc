package Multithreding;
class VolatileDemo {
    volatile boolean flag = true;

    public static void main(String[] args) throws Exception {
        VolatileDemo v = new VolatileDemo();

        new Thread(() -> {
            while(v.flag){}
            System.out.println("Stopped");
        }).start();

        Thread.sleep(1000);
        v.flag = false;
    }
}
